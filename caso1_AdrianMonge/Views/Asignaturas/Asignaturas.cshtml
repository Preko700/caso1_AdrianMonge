@model IEnumerable<Asignatura>

<h2>Inventario de Asignaturas</h2>

<table class="table">
    <thead>
        <tr>
            <th>Código de Asignatura</th>
            <th>Nombre de Asignatura</th>
            <th>Carrera Profesional</th>
            <th>Docente</th>
            <th>Créditos</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var asignatura in Model)
        {
            <tr>
                <td>@asignatura.CodigoAsignatura</td>
                <td>@asignatura.NombreAsignatura</td>
                <td>@asignatura.CarreraProfesional</td>
                <td>@asignatura.Docente</td>
                <td>@asignatura.Creditos</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@asignatura.Id">Editar</a> |
                    <a asp-action="Eliminar" asp-route-id="@asignatura.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Crear">Agregar Nueva Asignatura</a>
